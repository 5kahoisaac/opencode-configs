{
  "$schema": "https://opencode.ai/config.json",
  "model": "zai-coding-plan/glm-5",
  "theme": "opencode",
  "agent": {
    "plan": {
      "disable": true
    },
    "build": {
      "disable": true
    }
  },
  "permission": {
    "skill": {
      "*": "allow"
    },
    "todoread": "allow",
    "todowrite": "allow"
  },
  "plugin": [
    "oh-my-opencode-slim@latest",
    "@nick-vi/opencode-type-inject@latest"
  ],
  "enabled_providers": [
    "antigravity-manager",
    "opencode",
    "zai-coding-plan",
    "xai"
  ],
  "mcp": {
    "figma-desktop": {
      "enabled": false,
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp"
    },
    "jira": {
      "command": [
        "uvx",
        "mcp-atlassian"
      ],
      "enabled": false,
      "environment": {
        "CONFLUENCE_API_TOKEN": "$CONFLUENCE_API_TOKEN",
        "CONFLUENCE_URL": "$CONFLUENCE_URL",
        "CONFLUENCE_USERNAME": "$CONFLUENCE_USERNAME",
        "JIRA_API_TOKEN": "$JIRA_API_TOKEN",
        "JIRA_URL": "$JIRA_URL",
        "JIRA_USERNAME": "$JIRA_USERNAME"
      },
      "type": "local"
    },
    "github": {
      "enabled": true,
      "headers": {
        "Authorization": "Bearer $GITHUB_PAT_TOKEN"
      },
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp"
    },
    "serena": {
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--open-web-dashboard",
        "False"
      ],
      "enabled": true,
      "type": "local"
    },
    "qmd": {
      "command": [
        "qmd",
        "mcp"
      ],
      "enabled": false,
      "type": "local"
    },
    "vision": {
      "command": [
        "npx",
        "-y",
        "@z_ai/mcp-server"
      ],
      "enabled": true,
      "environment": {
        "Z_AI_API_KEY": "$Z_AI_API_KEY",
        "Z_AI_MODE": "ZAI"
      },
      "type": "local"
    }
  }
}
