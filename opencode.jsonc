{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "agent": {
    "plan": {
      "disable": true
    },
    "build": {
      "disable": true
    }
  },
  "permission": {
    "skill": {
      "*": "allow"
    },
    "todoread": "allow",
    "todowrite": "allow"
  },
  "plugin": [
    "oh-my-opencode-slim@latest",
    "@nick-vi/opencode-type-inject@latest"
  ],
  "enabled_providers": [
    // "anthropic",
    "opencode",
    "openrouter",
    "ollama-cloud",
    "zai-coding-plan",
    "xai"
  ],
  "mcp": {
    "figma-desktop": {
      "enabled": true,
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp"
    },
    "github": {
      "enabled": true,
      "headers": {
        "Authorization": "Bearer $GITHUB_PAT_TOKEN"
      },
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp"
    },
    "jira": {
      "command": [
        "uvx",
        "mcp-atlassian"
      ],
      "enabled": true,
      "environment": {
        "CONFLUENCE_API_TOKEN": "$CONFLUENCE_API_TOKEN",
        "CONFLUENCE_URL": "$CONFLUENCE_URL",
        "CONFLUENCE_USERNAME": "$CONFLUENCE_USERNAME",
        "JIRA_API_TOKEN": "$JIRA_API_TOKEN",
        "JIRA_URL": "$JIRA_URL",
        "JIRA_USERNAME": "$JIRA_USERNAME"
      },
      "type": "local"
    },
    "serena": {
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--open-web-dashboard",
        "False"
      ],
      "enabled": true,
      "type": "local"
    },
    "vision": {
      "command": [
        "npx",
        "-y",
        "@z_ai/mcp-server"
      ],
      "enabled": true,
      "environment": {
        "Z_AI_API_KEY": "$Z_AI_API_KEY",
        "Z_AI_MODE": "ZAI"
      },
      "type": "local"
    }
  }
}
